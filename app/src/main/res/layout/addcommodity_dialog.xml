<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:paddingTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="供应商编号："
                android:textColor="#000"
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_gysbh"
                android:inputType="number"
                android:background="@drawable/bg_white"
                android:layout_width="800dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="原料编号："
                android:textColor="#000"
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_ylbh"
                android:inputType="number"
                android:background="@drawable/bg_white"
                android:layout_width="800dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="原料名称："
                android:textColor="#000"
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_ylname"

                android:background="@drawable/bg_white"
                android:layout_width="800dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="姓名："
                android:textColor="#000"
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_name"
                android:background="@drawable/bg_white"
                android:layout_width="800dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="城市："
                android:textColor="#000"
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_city"
                android:background="@drawable/bg_white"
                android:layout_width="800dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="地址："
                android:textColor="#000"
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_address"
                android:background="@drawable/bg_white"
                android:layout_width="800dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="法人："
                android:textColor="#000"
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_leagelperson"
                android:background="@drawable/bg_white"
                android:layout_width="800dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="联系人："
                android:textColor="#000"
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_contacts"
                android:background="@drawable/bg_white"
                android:layout_width="800dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="业务范围："
                android:textColor="#000"
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_business"
                android:background="@drawable/bg_white"
                android:layout_width="800dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="电话："
                android:textColor="#000"
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_tel"
                android:inputType="number"
                android:background="@drawable/bg_white"
                android:layout_width="800dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="单价："
                android:textColor="#000"
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_price"
                android:inputType="number"
                android:background="@drawable/bg_white"
                android:layout_width="800dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:text="图片："
                android:textColor="#000"
                android:textSize="35dp"
                android:layout_width="500dp"
                android:layout_height="wrap_content" />
         <Button
             android:id="@+id/open"
             android:layout_marginRight="300dp"
             android:text="选择"
             android:textColor="#000"
             android:textSize="35dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/photo"
            android:layout_width="400dp"
            android:layout_height="400dp" />
        <Button
            android:id="@+id/submit"
            android:text="上传"
            android:textColor="#000"
            android:textSize="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
</LinearLayout>